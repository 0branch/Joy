.POSIX:
.SUFFIXES:

CC = gcc
CFLAGS = -DBIT_32 -Ofast -Wall -Wextra -Werror -ansi -pedantic -D_C_SOURCE=1
LDLIBS = -lm
OBJECTS = interp.o scan.o utils.o main.o

joy.exe: $(OBJECTS)
	$(CC) -o$@ $(OBJECTS) $(LDLIBS)

$(OBJECTS): globals.h

clean:
	rm -f joy.exe *.o

.SUFFIXES: .c .o

.c.o:
	$(CC) $(CFLAGS) -c $<
